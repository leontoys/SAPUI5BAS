<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns="sap.m">
    <Select items="{/cities}">
        <core:Item key="{city}" text="{city}"></core:Item>
    </Select>
    <ComboBox items="{/cities}">
            <core:Item key="{city}" text="{city}"></core:Item>
    </ComboBox>
    <MultiComboBox items="{/cities}">
            <core:Item key="{city}" text="{city}"></core:Item>
    </MultiComboBox>
</core:FragmentDefinition>