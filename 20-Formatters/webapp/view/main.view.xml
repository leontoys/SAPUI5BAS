<mvc:XMLView xmlns:core="sap.ui.core" controllerName="sap.ui.demo.controller.main" 
            xmlns:table="sap.ui.table" xmlns:form="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" 
             xmlns="sap.m">
    <form:SimpleForm id="formEmployees" editable="true">
        <Label text="{i18n>XLBL_EMPID}"></Label>
        <Input value="{empId}"></Input>
        <Label text="{i18n>XLBL_EMPNAME}"></Label>
        <Input value="{empName}"></Input>
        <Label text="{i18n>XLBL_SALARY}"></Label>
        <Input value="{salary}"></Input>
        <Label text="{i18n>XLBL_CURRENCY}"></Label>
        <Input value="{currency}"></Input>
        <Label ></Label>
        <Button id="buttonClick" text="{i18n>XBUT_CLICKME}"></Button>
        <Switch id="switchModel" change="onSwitch"></Switch>
    </form:SimpleForm>
    <table:Table id="tableEmployees" selectionMode="Single" rowSelectionChange="onSelect">
        <table:columns>
        <table:Column label="{i18n>XLBL_EMPID}">
            <table:template>
                <Text text="{empId}"></Text>
            </table:template>
        </table:Column>
        <table:Column label="{i18n>XLBL_EMPNAME}">
            <table:template>
                <Input value="{empName}"></Input>
            </table:template>
        </table:Column>
        <table:Column label="{i18n>XLBL_SALARY}">
            <table:template>
                <Text text="{salary}"></Text>
            </table:template>
        </table:Column>
        <table:Column label="{i18n>XLBL_SMOKER}">
            <table:template>
                <CheckBox selected="{smoker}"></CheckBox>
            </table:template>
        </table:Column>
        <table:Column label="{i18n>XLBL_RATING}">
            <table:template>
                <RatingIndicator value="{rating}"></RatingIndicator>
            </table:template>
        </table:Column>
        <table:Column label="{i18n>XLBL_MSTATUS}">
            <table:template>
                <Select selectedKey="{mStatus}">
                    <items>
                        <core:Item key="m" text="{i18n>XTXT_M}"></core:Item>
                        <core:Item key="s" text="{i18n>XTXT_S}"></core:Item>
                    </items>
                </Select>
            </table:template>
        </table:Column>
        <table:Column label="{i18n>XLBL_GENDER}">
            <table:template>
                <Image src="{gender}" height="20%" width="20%"></Image>
            </table:template>
        </table:Column>
        <table:Column label="{i18n>XLBL_ESTATUS}">
            <table:template>
                <Text text="{eStatus}"></Text>
            </table:template>
        </table:Column>
        </table:columns>
    </table:Table>
</mvc:XMLView>